generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pays {
  id_pays Int @id @default(autoincrement())
  nom_pays String @unique @db.VarChar(100)
  statistiques_journalieres StatistiquesJournalieres[]

  @@map("Pays")
}

model Virus {
  id_virus Int @id @default(autoincrement())
  nom_virus String @unique @db.VarChar(50)
  statistiques_journalieres StatistiquesJournalieres[]

  @@map("Virus")
  
}

model StatistiquesJournalieres {
  id_stat BigInt @id @default(autoincrement())
  id_pays Int
  id_virus Int
  date DateTime @db.Date
  nouveaux_cas Int @default(0)
  nouveaux_deces Int @default(0)
  total_cas Int @default(0)
  total_deces Int @default(0)
  pays Pays @relation(fields: [id_pays], references: [id_pays])
  virus Virus @relation(fields: [id_virus], references: [id_virus])

  @@unique([id_pays, id_virus, date])
  @@map("Statistiques_Journalieres")
}